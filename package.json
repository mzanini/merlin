{
  "name": "merlin",
  "version": "1.0.0",
  "description": "A tool to help a Dungeon Master",
  "license": "MIT",
  "repository": "user/repo",
  "author": {
    "name": "Marco Zanini",
    "email": "chetto87+merlin@gmail.com",
    "url": "http://www.marcozanini.it"
  },
  "main": "app/background.js",
  "build": {
    "appId": "com.electron.merlin",
    "productName": "merlin",
    "linux": {
      "target": "pacman"
    },
    "win": {
      "target": "nsis"
    }
  },
  "keywords": [
    "electron-app",
    "electron"
  ],
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "unit": "jest --verbose",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "distWin": "electron-builder --win",
    "lint": "eslint --ignore-path .gitignore .",
    "precommit": "lint-staged",
    "dev": "webpack --config build/webpack.config.js --progress --colors --watch --mode development",
    "dev:verbose": "npm run dev -- --verbose",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "dev:hot": "webpack-dev-server --config build/webpack.test.config.js --hot --inline --progress --colors --watch --content-base ./"
  },
  "jest": {
    "setupFiles": [
      "./test/testsetup.js"
    ],
    "automock": false
  },
  "dependencies": {
    "@material-ui/core": "3.0.1",
    "@material-ui/icons": "3.0.1",
    "autoprefixer": "9.1.3",
    "chance": "1.0.16",
    "dexie": "3.2.2",
    "electron-debug": "2.0.0",
    "electron-settings": "3.2.0",
    "jquery": "3.4.0",
    "json2csv": "4.2.1",
    "pev": "1.0.0",
    "popper.js": "1.14.4",
    "postcss-loader": "3.0.0",
    "react": "16.4.2",
    "react-dom": "16.4.2",
    "react-redux": "5.0.7",
    "redux": "4.0.0",
    "redux-thunk": "2.3.0",
    "typeface-roboto": "0.0.54",
    "url-loader": "1.1.1"
  },
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.3.3",
    "@babel/preset-env": "7.3.1",
    "@babel/preset-react": "7.0.0",
    "b": "2.0.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "24.1.0",
    "babel-loader": "8.0.5",
    "chai": "4.1.2",
    "css-loader": "1.0.0",
    "devtron": "1.4.0",
    "electron": "2.0.8",
    "electron-builder": "20.28.3",
    "electron-devtools-installer": "2.2.4",
    "electron-react-devtools": "0.5.3",
    "enzyme": "3.5.0",
    "enzyme-adapter-react-16": "1.3.0",
    "eslint": "5.6.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-node": "7.0.1",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-react": "7.11.1",
    "eslint-plugin-standard": "4.0.0",
    "husky": "1.0.0-rc.15",
    "jest": "24.1.0",
    "jsdom": "12.0.0",
    "lint-staged": "7.3.0",
    "mocha": "5.2.0",
    "react-test-renderer": "16.4.2",
    "readline": "1.3.0",
    "style-loader": "0.23.0",
    "webpack": "4.17.1",
    "webpack-cli": "3.1.0",
    "webpack-dev-server": "3.1.11",
    "webpack-merge": "4.1.4",
    "xo": "0.22.0"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  }
}
